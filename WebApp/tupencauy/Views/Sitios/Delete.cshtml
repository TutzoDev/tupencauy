@using tupencauy.ViewModels;
@model Sitio

@{
    ViewData["Title"] = "Borrar Sitio";
}

<h1>Borrar Sitio</h1>

<h3>Seguro quieres eliminar un sitio?, eso podra ocasionar problemas</h3>
<div>
    <h4>Sitio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-controller="SuperAdmin" asp-action="Sitios">Volver a la lista de sitios</a>
    </form>
</div>
