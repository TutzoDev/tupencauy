@model tupencauy.ViewModels.CreateNotificacionViewModel
@{
    ViewData["Title"] = "Crear Notificación";
}

<h1>Crear Notificación</h1>

<form asp-action="Crear">
    <div class="form-group">
        <label asp-for="UsuarioId" class="control-label"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mensaje" class="control-label"></label>
        <input asp-for="Mensaje" class="form-control" />
        <span asp-validation-for="Mensaje" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SitioId" class="control-label"></label>
        <input asp-for="SitioId" class="form-control" />
        <span asp-validation-for="SitioId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>